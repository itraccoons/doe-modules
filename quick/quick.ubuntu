#!/bin/sh

help="${RED}doe quick ubuntu [-c up|ssh|halt|destroy|provision]${NC}"
mod_datadir=$DOE_MODDIR/quick/.data
mod_tempdir=$DOE_TMPDIR/quick

quick_ubuntu_opts="c:r:h"

die()
{
    echo "No Ubuntu. Run 'doe quick ubuntu -c up' first"
    exit 1
}

quick_ubuntu()
{
    while getopts $quick_ubuntu_opts o; do
	case $o in
	    '?'|'h' ) echo "$help" && return 1 ;;
	    $o      ) eval arg_opt_$o=${OPTARG} ;;
	esac
    done

    tmp=${mod_tempdir}/ubuntu
    cmd=${arg_opt_c:=up}
    case $cmd in
	up)
	    [ -d ${tmp} ] || mkdir -p ${tmp}
	    release=${arg_opt_r:=xenial64}
	    cd ${tmp} && vagrant init ubuntu/$release --minimal --force && vagrant up
	    ;;
	ssh|halt|provision)
	    [ -f ${tmp}/Vagrantfile ] || die
	    cd ${tmp} && vagrant $cmd
	    ;;
	destroy)
	    [ -f ${tmp}/Vagrantfile ] || die
	    cd ${tmp} && vagrant $cmd
	    rm -rf ${tmp}
	    ;;
	config)
	    [ -f ${tmp}/Vagrantfile ] || die
	    echo ${tmp}/Vagrantfile
	    ;;
	*)  
	    echo $help
	    ;;
    esac
}

quick_ubuntu "$@" || exit 1
