#!/usr/bin/env bash
# shellcheck disable=SC2039

if [ -f ./doe-compose.yml ]; then
    IFS=$'\r\n' file=($(cat ./doe-compose.yml))

    for l in "${file[@]}"
    do
	case $l in
	    '---'    ) continue ;;
	    '...'    ) break ;;
	    '#'*     ) continue ;;
	    '    - '*) func=$(echo "$l" | cut -c7-) ;;
	    '  '*    ) mod=$(echo "$l" | cut -c3- | tr -d ':'); continue ;;
	    *        ) cmd=$(echo "$l" | tr -d ':'); continue ;;
	esac
	
	echo -e "\e[96m===[ $cmd $mod $func ]===\e[0m"
	eval "$cmd $mod $func"
	
    done
else
    echo "doe-compose.yml undetected"
fi

