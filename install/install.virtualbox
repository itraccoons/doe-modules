#!/bin/sh

mod_datadir=$HOME/doe/modules/install/.data
mod_tempdir=$HOME/doe/.tmp/install

install_virtualbox()
{

    tmp=${mod_tempdir}/virtualbox
    [ -d ${tmp} ] || mkdir -p ${tmp}

    cp ${mod_datadir}/virtualbox.yml ${tmp}/

    ansible-galaxy install --roles-path ${tmp} FGtatsuro.virtualbox
    ansible-playbook -i "localhost," -c local ${tmp}/virtualbox.yml
}

install_virtualbox "$@" || exit 1
