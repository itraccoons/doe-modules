#!/usr/bin/env bash

set -ex

if [ ! -d "/tmp/bazel" ]; then
    mkdir /tmp/bazel
fi

if [ ! -L ~/.cache/bazel ]; then
    ln -s /tmp/bazel ~/.cache/bazel
fi

cd "$NOMULUS_DIR" || exit

#bazel   --batch build \
#        --javacopt="-target 8 -source 8" \
#        //java{,tests}/google/registry/...

ARTEFACTS="$NOMULUS_DIR"/.artefacts
if [ -d "$ARTEFACTS" ]; then
    rm -rf "$ARTEFACTS"
    mkdir "$ARTEFACTS"
    mv "NOMULUS_DIR"/bazel-genfiles/java/google "$ARTEFACTS"
fi

set +x
